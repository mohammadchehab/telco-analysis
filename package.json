{
  "name": "telco-web-fullstack",
  "version": "1.0.0",
  "description": "Telco Analytics Platform - Full Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m uvicorn app:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd web && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd web && npm run build",
    "build:backend": "cd backend && echo 'Backend is Python-based, no build step required'",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && python -m uvicorn app:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd web && npm run start:prod",
    "prod": "npm run build && npm run start",
    "install:all": "npm install && cd web && npm install",
    "setup": "npm run install:all && cd backend && pip install -r requirements.txt",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 